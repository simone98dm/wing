/* =============================
  Code
============================= */
pre {
  margin-top: 0;
  margin-bottom: base;

  code {
    display: block;
    padding: 2px;
    white-space: pre-wrap;
    word-wrap: break-word;
  }
}

code {
  padding: 2px;
  white-space: nowrap;
  background: #E7E7E7;
  border-round(#D7D7D7);
  font-family: 'Consolas', 'Monaco', 'Menlo', monospace;
}
